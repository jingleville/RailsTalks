<!DOCTYPE html>
<html>
  <head>
    <title>ChatApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <% if current_user %>
      <div class="d-flex justify-content-around bd-highlight mb-3">
        <div class="p-2 bd-highlight">
          <%= link_to 'Talker', root_path, class: 'btn btn-primary'%>
        </div>
        <div class="p-2 bd-highlight">
          <%= yield :head %>
        </div>
        <div class="p-2 bd-highlight">
          <%= button_to 'log out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
      <%= render 'shared/script'%>
    <% end %>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>





